root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
charset = utf-8
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2
max_line_length = 120

[*.yaml]
indent_style = space
indent_size = 2
max_line_length = 120
